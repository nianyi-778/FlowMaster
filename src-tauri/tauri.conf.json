{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "MoDao",
  "version": "0.0.0",
  "identifier": "com.modao.dev",
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "shadow": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "title": "磨刀不误砍柴工",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}