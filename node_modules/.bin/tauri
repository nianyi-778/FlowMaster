#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/e/github/tauri-app/node_modules/.pnpm/@tauri-apps+cli@1.5.11/node_modules/@tauri-apps/cli/node_modules:/mnt/e/github/tauri-app/node_modules/.pnpm/@tauri-apps+cli@1.5.11/node_modules/@tauri-apps/node_modules:/mnt/e/github/tauri-app/node_modules/.pnpm/@tauri-apps+cli@1.5.11/node_modules:/mnt/e/github/tauri-app/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/e/github/tauri-app/node_modules/.pnpm/@tauri-apps+cli@1.5.11/node_modules/@tauri-apps/cli/node_modules:/mnt/e/github/tauri-app/node_modules/.pnpm/@tauri-apps+cli@1.5.11/node_modules/@tauri-apps/node_modules:/mnt/e/github/tauri-app/node_modules/.pnpm/@tauri-apps+cli@1.5.11/node_modules:/mnt/e/github/tauri-app/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@tauri-apps/cli/tauri.js" "$@"
else
  exec node  "$basedir/../@tauri-apps/cli/tauri.js" "$@"
fi
